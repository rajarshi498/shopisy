<%- include('./partials/header') %>

<% if(success.length > 0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500 shadow-lg z-50">
        <span class="inline-block mt-1 mb-1 text-white font-medium">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-4 md:px-10 py-6 md:py-10 gap-6 ">
    <!-- Sidebar -->
    <div class="w-full md:w-[25%] flex md:h-auto flex-col items-start pt-10">
        <div class="w-full md:w-64 bg-white rounded-2xl shadow-lg p-5 flex flex-col">
            
            <!-- Sidebar Header -->
            <div class="flex items-center gap-2 mb-6">
                <div class="w-6 h-6 bg-gradient-to-r from-blue-500 to-purple-500 rounded"></div>
                <h1 class="font-bold text-lg text-gray-800">Shop</h1>
            </div>

            <!-- Sort Section -->
            <div class="mb-6 bg-gray-50 p-3 rounded-xl">
                <h3 class="text-gray-700 font-medium mb-2">Sort By</h3>
                <form action="/shop" method="get">
                    <select 
                        class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm bg-white focus:outline-none focus:ring-2 focus:ring-blue-400" 
                        name="sortby"
                        onchange="this.form.submit()">
                        <option value="popular" <%= sortby === 'popular' ? 'selected' : '' %>>Popular</option>
                        <option value="newest" <%= sortby === 'newest' ? 'selected' : '' %>>Newest</option>
                    </select>
                </form>
            </div>

            <!-- Collections Section -->
            <div class="mb-8 bg-blue-50 p-3 rounded-xl">
                <h4 class="text-blue-700 font-semibold mb-3">Collections</h4>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-100 text-blue-700 font-medium" href="/shop">
                     All Products
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-100 text-blue-700 font-medium" href="/shop?filter=new">
                     New Collection
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-100 text-blue-700 font-medium" href="/shop?filter=discounted">
                     Discounted Products
                </a>
            </div>

            <!-- Filters Section -->
            <div class="bg-green-50 p-3 rounded-xl">
                <h4 class="text-green-700 font-semibold mb-3">Filter By</h4>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-green-100 text-green-700 font-medium" href="/shop?filter=availability">
                     Availability
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-green-100 text-green-700 font-medium" href="/shop?filter=discounted">
                     Discount
                </a>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="w-full md:w-[75%] flex flex-col gap-5 pt-10">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% products.forEach(function(product){ %>
                <div class="w-full">
                    <!-- Product Image -->
                    <div class="w-full h-52 flex items-center justify-center rounded-lg overflow-hidden bg-[<%= product.bgcolor %>]">
                        <img class="h-[12rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>

                    <!-- Product Details -->
                    <div class="flex justify-between items-center px-4 py-4 rounded-b-lg bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                        <div>
                            <h3 class="font-semibold flex items-center gap-2">
                                <%= product.name %>
                                <% if (new Date() - new Date(product.createdAt) < 7*24*60*60*1000) { %>
                                    <span class="text-xs bg-green-500 text-white px-2 py-1 rounded">New</span>
                                <% } %>
                            </h3>
                            <h4 class="text-sm">â‚¹ <%= product.price %></h4>

                            <% if (product.discount > 0) { %>
                                <p class="text-xs text-red-500">-<%= product.discount %>% off</p>
                            <% } %>
                        </div>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white shadow hover:scale-105 transition" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>

