<%- include('./partials/header') %>


<div class="w-full min-h-screen px-4 sm:px-10 lg:px-20 py-10 bg-gray-50 pt-20">
    <% if (user.cart && user.cart.length > 0) { %>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-10">
            <% user.cart.forEach(function(product) { %>
                <div class="rounded-2xl shadow-md overflow-hidden bg-white">


                    <div class="flex justify-center items-center h-60 sm:h-72 bg-[<%= product.bgcolor %>]">
                        <img class="h-40 sm:h-60 object-contain"
                             src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                             alt="<%= product.name %>">
                    </div>
                    

                    <div class="flex justify-between items-center px-4 sm:px-5 py-3 bg-[<%= product.panelcolor %>]">
                        <h3 class="text-lg sm:text-xl font-semibold"><%= product.name %></h3>
                        <div class="flex items-center gap-2">
                            <button class="w-7 h-7 bg-white flex rounded-full items-center justify-center shadow hover:bg-gray-100 transition">
                                <i class="ri-add-line"></i>
                            </button>
                            <div class="px-2 py-1 rounded-md bg-white text-black min-w-[32px] text-center">01</div>
                            <button class="w-7 h-7 bg-white flex rounded-full items-center justify-center shadow hover:bg-gray-100 transition">
                                <i class="ri-subtract-line"></i>
                            </button>
                        </div>
                    </div>

                    <div class="flex items-center text-white justify-between px-4 sm:px-5 py-3 bg-[<%= product.textcolor %>]">
                        <h4 class="text-sm sm:text-lg">Net Price</h4>
                        <h2 class="text-base sm:text-lg font-semibold">â‚¹ <%= product.price - product.discount + 20 %></h2>
                    </div>
                </div>
            <% }) %>
        </div>


        <div class="mt-10 sm:mt-16 bg-white rounded-2xl shadow-md p-6 sm:p-8 w-full sm:w-2/3 lg:w-1/2 mx-auto">
            <h3 class="text-xl sm:text-2xl font-bold mb-6">Price Breakdown</h3>
            

            <% let totalMRP = 0, totalDiscount = 0; %>
            <% user.cart.forEach(function(product) {
                totalMRP += Number(product.price);
                totalDiscount += Number(product.discount);
            }) %>

            <div class="space-y-3 sm:space-y-4 text-sm sm:text-base">
                <div class="flex justify-between">
                    <span>Total MRP</span>
                    <span>â‚¹ <%= totalMRP %></span>
                </div>
                <div class="flex justify-between">
                    <span>Discount on MRP</span>
                    <span>- â‚¹ <%= totalDiscount %></span>
                </div>
                <div class="flex justify-between">
                    <span>Platform Fee</span>
                    <span>â‚¹ 20</span>
                </div>
                <div class="flex justify-between">
                    <span>Shipping Fee</span>
                    <span class="text-green-600">FREE</span>
                </div>
            </div>

            <div class="w-full h-[1px] bg-gray-200 my-5 sm:my-6"></div>

            <div class="flex justify-between font-semibold text-lg sm:text-xl">
                <span>Total Amount</span>
                <span class="text-green-600">
                    â‚¹ <%= totalMRP - totalDiscount + 20 %>
                </span>
            </div>
            <div class="w-full h-[1px] bg-gray-200 my-5 sm:my-6"></div>
            <a href="/place-order" class="text-xl px-5 py-2 rounded-full bg-orange-500 text-white cursor-pointer hover:bg-orange-900 transition">Place Order</a>
        </div>
    <% } else { %>

        <div class="w-full flex justify-center items-center h-[50vh] px-4">
            <h2 class="text-lg sm:text-2xl text-gray-600 text-center">Your cart is empty ðŸ›’</h2>
        </div>
    <% } %>
</div>

<%- include('./partials/footer') %> 