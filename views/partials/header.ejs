<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] bg-gray-50">

  <nav class="w-full bg-white shadow-md fixed top-0 left-0 z-50 ">
    <div class="max-w-7xl mx-auto flex justify-between items-center px-6 py-3">

      <h3 class="text-2xl font-bold text-gray-800">Shopisy</h3>


      <div class="hidden md:flex items-center gap-6">
        <form action="/create-login">
          <input class="px-5 py-2 rounded-full bg-red-500 text-white cursor-pointer hover:bg-red-600 transition" type="submit" value="Admin">
        </form>

        <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
        <% if(loggedin){ %>
        <div class="flex items-center gap-5 text-gray-700 font-medium">
          <a href="/shop" class="hover:text-red-500 transition">Shop</a>
          <a href="/cart" class="hover:text-red-500 transition">Cart</a>
          <a href="/users/account" class="hover:text-red-500 transition">My Account</a>
          <a class="text-red-600 hover:text-red-700 transition" href="/users/logout">Logout</a>
        </div>
        <% } %>
      </div>

      <button id="menu-btn" class="md:hidden text-2xl text-gray-700 focus:outline-none">
        <i class="ri-menu-line"></i>
      </button>
    </div>


    <div id="mobile-menu" class="hidden flex-col md:hidden bg-white shadow-lg px-6 pb-4">
      <form action="/create-login" class="my-3">
        <input class="px-5 py-2 rounded-full bg-red-500 text-white cursor-pointer hover:bg-red-600 transition w-full" type="submit" value="Admin">
      </form>

      <% if(loggedin){ %>
      <a href="/shop" class="block py-2 border-b text-gray-700 hover:text-red-500">Shop</a>
      <a href="/cart" class="block py-2 border-b text-gray-700 hover:text-red-500">Cart</a>
      <a href="/account" class="block py-2 border-b text-gray-700 hover:text-red-500">My Account</a>
      <a href="/create-login" class="block py-2 border-b text-gray-700 hover:text-red-500">Admin</a>
      <a href="/users/logout" class="block py-2 text-red-600 hover:text-red-700">Logout</a>
      <% } %>
    </div>
  </nav>



  <script>
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    menuBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>

</body>
</html>
