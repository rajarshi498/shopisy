<%- include('./partials/header') %>
<% if(success.length > 0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-lg bg-green-500 shadow-lg z-50 animate-bounce">
        <span class="inline-block text-white font-semibold">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="flex flex-col md:flex-row min-h-screen pt-20 bg-gray-50">


  <aside class="w-full md:w-64 bg-white shadow-md p-6 flex flex-col rounded-b-2xl md:rounded-none">
    <div class="flex items-center gap-3 mb-10">
      <img src="<%= user.picture || 'https://i.pravatar.cc/60' %>" 
           class="w-14 h-14 rounded-full border shadow-sm">
      <div>
        <h2 class="text-lg font-semibold text-gray-800">Hi, <%= user.fullname %></h2>
      </div>
    </div>


    <nav class="flex-1 space-y-2">
      <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-blue-50 text-blue-600 font-medium shadow-sm">
        <i class="ri-user-line"></i> Profile
      </a>
      <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">
        <i class="ri-shopping-bag-3-line"></i> My Orders
      </a>
      <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">
        <i class="ri-map-pin-line"></i> Addresses
      </a>
      <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">
        <i class="ri-bank-card-line"></i> Payments
      </a>
      <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">
        <i class="ri-heart-line"></i> Wishlist
      </a>
      <a href="#" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition">
        <i class="ri-notification-3-line"></i> Notifications
      </a>
    </nav>

    <!-- Logout -->
    <a href="/users/logout" class="flex items-center gap-3 px-3 py-2 mt-6 rounded-lg hover:bg-red-100 text-red-600 font-medium transition">
      <i class="ri-logout-circle-r-line"></i> Logout
    </a>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-6 sm:p-10">
    <h1 class="text-2xl font-bold mb-6 text-gray-800">My Profile</h1>

    <!-- Profile Info Card -->
    <div class="bg-white shadow-md rounded-xl p-6 space-y-4 border border-gray-100">
      <div class="flex flex-col sm:flex-row gap-6">
        <img src="<%= user.picture || 'https://i.pravatar.cc/60' %>"
             class="w-20 h-20 rounded-full border shadow">
        <div>
          <h2 class="text-xl font-semibold text-gray-800"><%= user.fullname %></h2>
          <p class="text-gray-500 text-sm">Joined recently</p>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-4 text-center">
        <div class="p-3 rounded-lg bg-gray-50 ">
          <p class="text-m text-gray-500">Email</p>
          <p class="font-medium text-gray-800"><%= user.email %></p>
        </div>
        <div class="p-3 rounded-lg bg-gray-50">
          <p class="text-m text-gray-500">Phone</p>
          <p class="font-medium text-gray-800"><%= user.contact || 'Not added' %></p>
        </div>
        <div class="p-3 rounded-lg bg-gray-50">
          <p class="text-m text-gray-500">Orders</p>
          <p class="font-medium text-gray-800"><%= user.orders.length %> total orders</p>
        </div>
        <div class="p-3 rounded-lg bg-gray-50">
          <p class="text-m text-gray-500">Password</p>
          <p class="font-medium text-gray-800">********</p>
        </div>
      </div>

      <div class="pt-4">
        <a href="/account/edit"
           class="px-5 py-2.5 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition">
          Edit Profile
        </a>
      </div>
    </div>
  </main>
</div>

<%- include('./partials/footer') %>
